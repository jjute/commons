<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" name="CommonLogger">
    <Appenders>

        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{HH:mm:ss}] [%t/%level] [%logger{1}] - %msg%n"/>
        </Console>

        <File name="File" fileName="logs/ykc-internal.log" immediateFlush="true">
          <PatternLayout pattern="[%d{HH:mm:ss}] [%t/%level] [%logger{1}] - %msg%n"/>
        </File>

    </Appenders>
    <Loggers>

        <Logger name="ykc-internal" level="ALL" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Root level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
        </Root>

    </Loggers>
</Configuration>